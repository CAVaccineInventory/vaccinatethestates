<li id="{{id}}" class="site-card rounded-lg mb-4 relative grid grid-cols-1
     border divide-y">
    <div class="grid grid-cols-1 p-4">
        <h4 class="font-bold text-lg">
            {{name}}
            {{#if website}}
                &middot; <a href="{{website}}" target="_blank">Website</a>
            {{/if}}
        </h4>
        <a href="{{addressLink}}" target="_blank">{{address}}</a>
    </div>
    {{#if hours}}
        <div class="grid grid-cols-1 p-4">
            <h5 class="font-bold">{{t "hours"}}</h5>
            <p>{{hours}}</p>
        </div>
    {{/if}}
    {{#if notes}}
        <div class="grid grid-cols-1 p-4">
            <h5 class="font-bold">{{t "notes"}}</h5>
            {{{notes}}}
        </div>
    {{/if}}
</li>
