<li id="{{id}}" class="site-card rounded-lg mb-4 relative grid grid-cols-1
     shadow-md border bg-white">
    <div class="flex flex-row justify-between p-4">
        <div class="grid grid-cols-1 me-1">
            <h4 class="font-bold text-lg">
                {{name}}
            </h4>
            <a class="text-sm" href="{{addressLink}}" target="_blank">{{address}}</a>
        </div>
        <div class="rounded-full bg-gray-300 self-center px-4 py-2">
            {{t "call"}}
        </div>
    </div>
    <details>
        <summary class="px-4 py-2">
            {{t "more_details"}}
        </summary>
        {{#if appointmentDetails}}
            <div class="grid grid-cols-1 px-4 py-2">
                <h5 class="font-bold">{{t "appointment_details"}}</h5>
                {{{appointmentDetails}}}
            </div>
        {{/if}}
        {{#if hours}}
            <div class="grid grid-cols-1 px-4 py-2">
                <h5 class="font-bold">{{t "hours"}}</h5>
                <p>{{hours}}</p>
            </div>
        {{/if}}
        {{#if notes}}
            <div class="grid grid-cols-1 px-4 py-2">
                <h5 class="font-bold">{{t "notes"}}</h5>
                {{{notes}}}
            </div>
        {{/if}}
        {{#if moreInfo}}
            <div class="grid grid-cols-1 px-4 py-2">
                <h5>{{{t "more_information"}}}</h5>
                <div class="flex flex-row justify-between text-sm">
                    {{#if website}}
                        <a href="{{website}}">{{website}}</a>
                    {{/if}}
                    {{#if phoneNumber}}
                        <a href="tel:{{phoneNumber}}">{{phoneNumber}}</a>
                    {{/if}}
                </div>
            </div>
        {{/if}}
        <div class="flex flex-row justify-between px-4 py-2 text-sm">
            <div>
                {{t "data_from"}} idk
            </div>
            <div>
                {{t "correction" }}
                <a href="https://airtable.com/shrdt7TsVi76kTzYt?prefill_Location+ID={{id}}">{{t "correction_link"}}</a>
            </div>
        </div>
    </details>
</li>
