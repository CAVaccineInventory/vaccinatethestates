# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Javascript
[*.{js,ts,tsx}]
indent_style = space
indent_size = 2

# Shell
[*.sh]
charset = utf-8
indent_style = space
indent_size = 4

# Markdown
[*.{md,txt}]
indent_style = space
indent_size = 4
